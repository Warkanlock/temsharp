@model Temsharp.Models.Permission

@{
    ViewData["Title"] = "Apply for Permissions";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Permission">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfPermission" class="control-label"></label>
                <input type="date" asp-format="{0:dd-MM-yyyy}" asp-for="DateOfPermission" class="form-control" />
                <span asp-validation-for="DateOfPermission" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypePermission" class="control-label"></label>
                <select asp-for="TypePermissionId" class="form-control" asp-items="ViewBag.TypePermissionId">
                    <option value="">-- Select Type of Permission --</option>
                </select>
                <span asp-validation-for="TypePermissionId" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}