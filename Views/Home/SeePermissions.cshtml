@model IEnumerable<Temsharp.Models.Permission>

@{
    ViewData["Title"] = "See All Permissions";
}

<p>
    <a asp-action="ApplyPermissions">Apply for a <strong>NEW</strong> Permission</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfPermission)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypePermission)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfPermission)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypePermission.Description)
                </td>
                <td>
                    <form asp-controller="Permission" asp-action="Delete" asp-route-id="@item.PermissionId" method="post" data-ajax="true" data-ajax-success="deleteItem(this)"><button class="btn btn-light" type="submit">Delete</button> </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function deleteItem(form) {
        $(form).parents('tr').remove();
    }
</script>


